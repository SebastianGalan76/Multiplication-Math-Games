<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.game_settings.GameSettingsModeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/mode"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mode_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode_info"
        android:textColor="@color/incorrect"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mode_info">

        <ImageButton
            android:id="@+id/btn_mode_0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_0"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_1"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_2"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_0"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_1"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_3"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_0"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_4"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_5"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_3"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_1"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_4"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_2"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_3"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_mode_8"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_6"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_4"
            app:tint="@color/normal_text" />

        <ImageButton
            android:id="@+id/btn_mode_8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button2"
            android:elevation="5dp"
            android:onClick="selectGame"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gameicon_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_mode_7"
            app:layout_constraintTop_toBottomOf="@+id/btn_mode_5"
            app:tint="@color/normal_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>